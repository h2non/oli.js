  function loc() {
    var start = offset();
    var end = start + text().length;

    var loc = {
      line: line(),
      column: column(),
      start: start,
      end: end
    };

    if (options.filename) {
      loc.filename = options.filename
    }

    return loc;
  }

  function astNode(tree) {
    tree.loc = loc();
    return tree;
  }
