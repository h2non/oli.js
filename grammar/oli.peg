Program
  = body:SourceElements? {
      return {
        type:     "Program",
        body:     body !== null ? body : []
      };
    }

SourceElements
  = head:Statement tail:(__ Statement)* {
      var result = [ head ];
      for (var i = 0, l = tail.length; i < l; i += 1) {
        result.push(tail[i][1]);
      }
      return result;
    }
